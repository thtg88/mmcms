{
    "name": "thtg88/mmcms",
    "type": "library",
    "description": "A headless CMS. With a REST API.",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Marassi",
            "email": "admin@marco-marassi.com"
        }
    ],
    "require": {
        "anhskohbo/no-captcha": "^3.0",
        "barryvdh/laravel-cors": "^0.11.0",
        "doctrine/dbal": "^2.7",
        "illuminate/bus": "^6.0.0",
        "illuminate/console": "^6.0.0",
        "illuminate/contracts": "^6.0.0",
        "illuminate/database": "^6.0.0",
        "illuminate/filesystem": "^6.0.0",
        "illuminate/mail": "^6.0.0",
        "illuminate/notifications": "^6.0.0",
        "illuminate/queue": "^6.0.0",
        "illuminate/routing": "^6.0.0",
        "illuminate/support": "^6.0.0",
        "laravel/passport": "^7.0",
        "nesbot/carbon": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "Thtg88\\MmCms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thtg88\\MmCms\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.3",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run && vendor/bin/tlint lint resources/views"
            ]
        },
        "laravel": {
            "providers": [
                "Thtg88\\MmCms\\MmCmsServiceProvider"
            ],
            "aliases": {
                "Debugbar": "Thtg88\\MmCms\\MmCmsFacade"
            }
        }
    },
    "scripts": {
        "check-style": [
            "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run",
            "vendor/bin/tlint lint resources/views"
        ],
        "fix-style": "vendor/bin/php-cs-fixer fix --using-cache=no",
        "test": "vendor/bin/phpunit"
    }
}
