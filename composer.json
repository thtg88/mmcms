{
    "name": "thtg88/mmcms",
    "type": "library",
    "description": "A headless CMS. With a REST API.",
    "license": "MIT",
    "authors": [
        {
            "name": "Marco Marassi",
            "email": "admin@marco-marassi.com"
        }
    ],
    "require": {
        "anhskohbo/no-captcha": "^3.0",
        "fruitcake/laravel-cors": "^1.0",
        "doctrine/dbal": "^2.9",
        "illuminate/bus": "^7.0.0",
        "illuminate/config": "^7.0.0",
        "illuminate/console": "^7.0.0",
        "illuminate/container": "^7.0.0",
        "illuminate/contracts": "^7.0.0",
        "illuminate/database": "^7.0.0",
        "illuminate/filesystem": "^7.0.0",
        "illuminate/mail": "^7.0.0",
        "illuminate/notifications": "^7.0.0",
        "illuminate/queue": "^7.0.0",
        "illuminate/routing": "^7.0.0",
        "illuminate/support": "^7.0.0",
        "laravel/passport": "^8.0",
        "nesbot/carbon": "^2.0.0",
        "thtg88/laravel-exists-without-soft-deleted-rule": "^0.2.0"
    },
    "autoload": {
        "psr-4": {
            "Thtg88\\MmCms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Thtg88\\MmCms\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1",
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.3",
        "brainmaestro/composer-git-hooks": "^2.8",
        "phpstan/phpstan": "^0.12.14",
        "orchestra/testbench": "^5.1",
        "tightenco/tlint": "^4.0"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run && vendor/bin/tlint lint resources/views"
            ]
        },
        "laravel": {
            "providers": [
                "Thtg88\\MmCms\\MmCmsServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "[[ -d .git ]] && vendor/bin/cghooks add --no-lock || true"
        ],
        "post-update-cmd": [
            "[[ -d .git ]] && vendor/bin/cghooks update || true"
        ],
        "check-style": [
            "vendor/bin/php-cs-fixer fix --using-cache=no --diff --dry-run",
            "vendor/bin/tlint lint resources/views"
        ],
        "fix-style": "vendor/bin/php-cs-fixer fix --using-cache=no",
        "stan": [
            "vendor/bin/phpstan analyse src",
            "vendor/bin/phpstan analyse tests"
        ],
        "test": "vendor/bin/phpunit"
    }
}
